<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lukas.app.mapper.UserMapper">

	<resultMap id="userMap" type="com.lukas.app.domain.User" >
		<id column="id" property="id" />
		<result column="username" property="username" />
		<result column="email" property="email" />
		<result column="password_hash" property="passwordHash" />
		<result column="role" property="role" javaType="com.lukas.app.domain.Role" />
		<result column="created_at" property="created" />
	</resultMap>
	
	<select id="selectUsers" resultMap="userMap">
			SELECT
				users.id, users.username, users.email,
				users.password_hash, users.role, users.created_at
			FROM users
	</select>
</mapper>